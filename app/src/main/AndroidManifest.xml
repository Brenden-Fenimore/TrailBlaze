<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!--Add internet permission to allow app to connect to the internet.-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.TrailBlaze"
            tools:targetApi="31">
        <activity
                android:name=".ui.MenuActivity"
                android:exported="false"
                android:theme="@style/Base.Theme.TrailBlaze"/>
        <activity
                android:name=".settings.AboutActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.PrivacyAndSecurityActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.AppearanceActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.NotificationsActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.ContactUsActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.SupportScreenActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".ui.profile.FriendsProfile"
                android:exported="false"/>
        <activity
                android:name=".login.TermsActivity"
                android:exported="false"
                android:label="@string/title_activity_terms"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.PersonalizeActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.RegisterActivity"
                android:exported="false"/>
        <activity
                android:name=".login.LoginActivity"
                android:exported="true"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.SettingsScreenActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>