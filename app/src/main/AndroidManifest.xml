<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          tools:ignore="ExtraText">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:enableOnBackInvokedCallback="true"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.TrailBlaze"
            tools:targetApi="31">
        <activity
                android:name=".ui.profile.MessageSearchActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.profile.InboxActivity"
                android:configChanges="orientation|keyboardHidden|screenSize"
                android:exported="false"
                android:label="@string/title_activity_inbox"
                android:theme="@style/Theme.TrailBlaze.Fullscreen"/>
        <activity
                android:name=".watcherFeature.WatcherProfile"
                android:exported="false"/>
        <activity
                android:name=".ui.home.PendingNotificationActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.parks.TimerActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.parks.AttemptTrailActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.profile.UserListActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.achievements.BadgesActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.parks.ParkDetailActivity"
                android:exported="true"/>
        <activity
                android:name=".ui.achievements.AchievementsActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.SafetyActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.MenuActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.AboutActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.PrivacyAndSecurityActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.AppearanceActivity"
                android:exported="false"/>
        <activity
                android:name=".settings.NotificationsActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.ContactUsActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.SupportScreenActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".ui.profile.FriendsProfileActivity"
                android:exported="false"/>
        <activity
                android:name=".login.TermsActivity"
                android:exported="false"
                android:label="@string/title_activity_terms"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.PersonalizeActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.ForgotPasswordActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".login.RegisterActivity"
                android:exported="false"/>
        <activity
                android:name=".login.LoginActivity"
                android:exported="true"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity
                android:name=".settings.SettingsScreenActivity"
                android:exported="false"
                android:theme="@style/Theme.TrailBlaze"/>
        <activity android:name=".ui.profile.FriendRequestActivity"/>
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/file_paths"/>
        </provider>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="${GOOGLE_MAPS_API_KEY}"/> <!-- Acceptable Use Activity -->
        <activity android:name=".login.AcceptableActivity"/> <!-- Privacy Activity -->
        <activity android:name=".login.PrivacyActivity"/> <!-- Watcher Member Activity -->
        <activity android:name=".watcherFeature.WatcherMemberList"/>
    </application>

</manifest>