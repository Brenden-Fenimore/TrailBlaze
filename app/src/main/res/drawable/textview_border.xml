<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer layer for the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                    android:width="2dp"
                    android:color="#000000" /> <!-- Border color -->
        </shape>
    </item>
    <!-- Inner layer for the background color -->
    <item
            android:left="2dp"
            android:right="2dp"
            android:top="2dp"
            android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#EFE7EF"/> <!-- Background color -->
        </shape>
    </item>
</layer-list>
