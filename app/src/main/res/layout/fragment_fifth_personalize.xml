<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/watcherSetupStatement"
                android:padding="9dp"
                android:layout_margin="18dp"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/amethysta"
                android:textAlignment="center"
                android:text="@string/setupWatchers"/>

        <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/watcherDescription"
                android:layout_margin="13dp"
                android:fontFamily="@font/amethysta"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="@string/watcherDescription"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textview_border"
                />

        <ImageView
                android:id="@+id/watcherLogo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/watcherDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/watcherslogo"
                android:contentDescription="@string/watcherLogo"
                android:layout_gravity="center_horizontal"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="13dp">

            <Button
                    android:id="@+id/yesBtn"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="@string/Yes"
                    android:fontFamily="@font/amethysta"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/LaterBtn"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/Later"
                    android:fontFamily="@font/amethysta"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
