<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearColumnlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:ellipsize="end"
            android:id="@+id/Login"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/titleLogin"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:gravity="center_horizontal"
            android:id="@+id/txtBySigning"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/login1"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:gravity="center_horizontal"
            android:id="@+id/termsandconditions"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/titleTerms"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="135dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

        <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtLogin"
                android:text="@string/titleLogin"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"/>
        <TextView
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtRegister"
                android:text="@string/titleRegister"
                android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearColumnlogin"
            android:layout_margin="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearColumnEmail"
                android:orientation="horizontal"
                android:paddingEnd="9dp"
                android:paddingStart="9dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_dialog_email"
                    android:id="@+id/imageView"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/etEmail"
                    android:hint="@string/titleEmail"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearColumnPassword"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingEnd="9dp"
                android:paddingStart="9dp">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                    android:id="@+id/imageView1"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/etPassword"
                    android:hint="@string/passWord"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/linearRowRememberpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                    android:ellipsize="end"
                    android:id="@+id/checkBoxRememberPassword"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/rememberPassword"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="normal"/>
            <TextView
                    android:ellipsize="end"
                    android:layout_gravity="top"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="27dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/titleForgotPassword"
                    android:id="@+id/forgotPassword"
                    android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <Button
                android:text="@string/titleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginbtn"
                android:layout_marginTop="20dp">
        </Button>
    </LinearLayout>
    <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/frameStackorConnectw"
            android:layout_width="match_parent"
            android:layout_height="369dp"
            android:layout_marginTop="0dp">

            <ImageView
                    android:layout_width="821dp"
                    android:layout_height="437dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hikingimage2"
                    android:id="@+id/imageView8"/>

        <LinearLayout
                android:id="@+id/linearRowFacebookOne"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"/>
    </FrameLayout>

</LinearLayout>