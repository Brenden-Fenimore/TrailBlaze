<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearColumnlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/Login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/titleLogin"
                android:textSize="40sp"
                android:fontFamily="@font/amethysta"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="10dp"/>

        <TextView
                android:id="@+id/txtBySigning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login1"
                android:textSize="16sp"
                android:fontFamily="@font/amethysta"
                app:layout_constraintTop_toBottomOf="@+id/Login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/termsandconditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleTerms"
                android:textSize="16sp"
                android:fontFamily="@font/amethysta"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintTop_toBottomOf="@id/txtBySigning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="20dp"/>
        <LinearLayout
                android:id="@+id/loginRegister"
                android:orientation="horizontal"
                android:layout_width="135dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/termsandconditions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:layout_width="62dp"
                    android:layout_height="wrap_content"
                    android:text="@string/titleLogin"
                    android:id="@+id/txtLogin"
                    android:fontFamily="@font/amethysta"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:text="@string/titleRegister"
                    android:fontFamily="@font/amethysta"
                    android:layout_gravity="center"
                    android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearColumnlogin"
                android:layout_margin="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/loginRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearColumnEmail"
                android:orientation="horizontal"
                android:paddingEnd="9dp"
                android:paddingStart="9dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_dialog_email"
                    android:id="@+id/imageView"
                    android:contentDescription="@string/description"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"
                    android:id="@+id/etEmail"
                    android:fontFamily="@font/amethysta"
                    android:hint="@string/titleEmail"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearColumnPassword"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingEnd="9dp"
                android:paddingStart="9dp">
            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_lock_idle_lock"
                    android:id="@+id/imageView1"
                    android:contentDescription="@string/description"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:id="@+id/etPassword"
                    android:fontFamily="@font/amethysta"
                    android:hint="@string/passWord"/>
        </LinearLayout>
        <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/linearRowRememberpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatCheckBox
                    android:ellipsize="end"
                    android:id="@+id/checkBoxRememberPassword"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="@font/amethysta"
                    android:text="@string/rememberPassword"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="normal"/>
            <TextView
                    android:layout_gravity="top"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="27dp"
                    android:fontFamily="@font/amethysta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/titleForgotPassword"
                    android:id="@+id/forgotPassword"
                    android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <Button
                android:text="@string/titleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginbtn"
                android:fontFamily="@font/amethysta"
                android:layout_marginTop="20dp">
        </Button>
    </LinearLayout>
        <FrameLayout
                android:id="@+id/frameStackorConnectw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/LinearColumnlogin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                    android:layout_width="764dp"
                    android:layout_height="468dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hikingimage2"
                    android:id="@+id/imageView8"
                    android:contentDescription="@string/description"/>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>