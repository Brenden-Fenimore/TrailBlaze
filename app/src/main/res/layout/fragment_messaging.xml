<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.MessagingActivity">

    <!-- Back Button-->
    <ImageButton
            android:id="@+id/backButton"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="18dp"/>

    <!-- Search recipient -->
    <AutoCompleteTextView
            android:id="@+id/recipientSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="@string/searchFriends"
            android:padding="9dp"
            android:layout_marginEnd="63dp"
            android:layout_marginTop="18dp"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Search Icon-->

    <ImageButton
            android:id="@+id/searchIcon"
            android:src="@drawable/quantum_ic_search_grey600_24"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:contentDescription="@string/search"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/recipientSearch"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="13dp"/>


    <!-- RecyclerView for displaying messages-->

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="9dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <ImageButton
                android:id="@+id/attachImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/attachImage"
                android:src="@drawable/round_camera_alt_24"/>

        <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:inputType="text"
                android:hint="@string/typeMessage"
                android:padding="9dp"
                android:elevation="1dp"/>

        <Button
                android:id="@+id/sendMessageButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/send"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>