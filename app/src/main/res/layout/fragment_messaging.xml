<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.MessagingActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topBanner"
            app:layout_constraintTop_toTopOf="parent
"           app:layout_constraintBottom_toTopOf="@+id/messagesRecyclerView"
            android:elevation="4dp"
            tools:ignore="ExtraText">

    <!-- Back Button-->
    <ImageButton
            android:id="@+id/backButton"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:src="@drawable/chevron_left"
            android:contentDescription="@string/backButton"
            android:tint="#CDEDA3"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="9dp"
            android:clickable="true"
            android:focusable="true"/>

<include layout="@layout/item_user"
            />


    </LinearLayout>
    <!-- RecyclerView for displaying messages-->

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="9dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topBanner"
            app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
            android:id="@+id/messageInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="9dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <ImageButton
                android:id="@+id/attachImageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/attachImage"
                android:src="@drawable/round_camera_alt_24"/>

        <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:inputType="text"
                android:hint="@string/typeMessage"
                android:padding="9dp"
                android:elevation="1dp"/>

        <Button
                android:id="@+id/sendMessageButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/send"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>