<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/linearColumnregister"
            android:layout_width="match_parent"
            android:layout_height="653dp"
            android:orientation="vertical">
        <TextView
                android:id="@+id/Register"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="@string/titleRegister"
                android:textSize="40sp"
                android:fontFamily="@font/amethysta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="135dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="@string/titleLogin"
                    android:id="@+id/txtLogin"
                    android:fontFamily="@font/amethysta"
                    android:layout_gravity="center"/>
            <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="@string/titleRegister"
                    android:fontFamily="@font/amethysta"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/LinearColumnlreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/linearColumnusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/userperson"
                        android:id="@+id/imageView3"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/userName"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearColumndob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_menu_my_calendar"
                        android:id="@+id/calendar"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:id="@+id/etDateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/dob"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnEmail"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_dialog_email"
                        android:id="@+id/email"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id="@+id/etEmail"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/titleEmail"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnPhone"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_menu_call"
                        android:id="@+id/phone"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:id="@+id/etPhone"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/phoneNumber"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnpw"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock"
                        android:id="@+id/pw"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/etpw1"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/passWord"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnconfirmpw"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock"
                        android:id="@+id/pw2"
                        android:contentDescription="@string/description"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/etConfirmpw"
                        android:fontFamily="@font/amethysta"
                        android:hint="@string/password2"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/linearRowRememberpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatCheckBox
                        android:ellipsize="end"
                        android:id="@+id/checkBoxTerms"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/agree"
                        android:fontFamily="@font/amethysta"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="normal"/>
                <TextView
                        android:ellipsize="end"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="27dp"
                        android:fontFamily="@font/amethysta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:id="@+id/termsandconditions"
                        android:text="@string/titleTerms"
                        android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>
            <Button
                    android:text="@string/createAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createAccountBtn"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/amethysta"
                    android:enabled="false"/>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/frameStackorConnectw"
            android:layout_width="432dp"
            android:layout_height="369dp"
            android:layout_marginTop="0dp">

            <ImageView
                    android:layout_width="880dp"
                    android:layout_height="474dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hikingimage2"
                    android:id="@+id/imageView8"
                    android:contentDescription="@string/description"/>
    </FrameLayout>
</LinearLayout>