<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/linearColumnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:id="@+id/Register"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Register"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="135dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal">

            <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:id="@+id/txtLogin"
                    android:layout_gravity="center"/>
            <TextView
                    android:id="@+id/txtRegister"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/LinearColumnlreg"
                android:layout_width="match_parent"
                android:layout_height="409dp"
                android:layout_margin="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/linearColumnusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/userperson"
                        android:id="@+id/imageView3"/>
                <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Username"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearColumndob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_menu_my_calendar"
                        android:id="@+id/calendar"/>
                <EditText
                        android:id="@+id/etDateofbirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Date of Birth mm/dd/yy"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnEmail"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_dialog_email"
                        android:id="@+id/email"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id="@+id/etEmail"
                        android:hint="Email Address"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnpw"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock"
                        android:id="@+id/pw"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/etpw1"
                        android:hint="Password"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearColumnconfirmpw"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="9dp"
                    android:paddingStart="9dp">
                <ImageView
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_lock_idle_lock"
                        android:id="@+id/pw2"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:id="@+id/etConfirmpw"
                        android:hint="Confirm Password"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:id="@+id/linearRowRememberpass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatCheckBox
                        android:ellipsize="end"
                        android:id="@+id/checkBoxTerms"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="You agree to our"
                        android:textColor="@android:color/darker_gray"
                        android:textFontWeight="400"
                        android:textStyle="normal"/>
                <TextView
                        android:ellipsize="end"
                        android:layout_gravity="top"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="27dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:id="@+id/termsandconditions"
                        android:text="Terms and Conditions"
                        android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>
            <Button
                    android:text="Create Account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/createAccountBtn"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:enabled="false"/>

        </LinearLayout>
    </LinearLayout>
    <FrameLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/frameStackorConnectw"
            android:layout_width="432dp"
            android:layout_height="369dp"
            android:layout_marginTop="0dp">

        <FrameLayout
                android:id="@+id/frameStackssubtract"
                android:layout_gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="366dp">

            <ImageView
                    android:layout_width="880dp"
                    android:layout_height="474dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hikingimage2"
                    android:id="@+id/imageView8"/>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>