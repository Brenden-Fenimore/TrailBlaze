<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
<!--Terms and Conditions header-->
    <TextView
            android:ellipsize="end"
            android:id="@+id/termsandconditions"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/titleTerms"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!--Last Updated Notice-->
    <TextView
            android:ellipsize="end"
            android:id="@+id/lastupdated"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="@string/lastUpdated_toc"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<!--table of contents-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
                android:id="@+id/toc_services"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Our Services"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>
        <TextView
                android:id="@+id/toc_intellectualProperty"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Intellectual Property Rights"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_userRep"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="User Representations"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>
        <TextView
                android:id="@+id/toc_prohActivities"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Prohibited Activities"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_userGenCon"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="User Generated Contributions"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_contLicense"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Contribution License"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_serManagement"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Services Management"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_term_term"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Term and Termination"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_mod_int"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Modifications and Interruptions"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_govLaw"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Governing Law"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_dis_res"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Dispute Resolution"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_corrections"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Corrections"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_disclaimer"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Disclaimer"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_liability_limitations"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Limitations of Liability"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_indemnification"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Indemnification"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_userData"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="User Data"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_electronic_communitcations"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Electronic Communications, Transactions, and Signatures"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_misc"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="Miscellaneous"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>

        <TextView
                android:id="@+id/toc_contactUs"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/contact_us"
                android:textColor="@android:color/holo_blue_dark"
                android:clickable="true"/>
        <!--end of table of contents-->
    </LinearLayout>


    <TextView
            android:ellipsize="end"
            android:id="@+id/agreement"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/agreementToTerms"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="303dp"
            android:layout_height="551dp"
            android:id="@+id/LinearColumnterms"
            android:layout_margin="25dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:gravity="center">


        <TextView
                android:id="@+id/msg_termsandco2"
                android:layout_marginTop="10dp"
                android:layout_gravity=""
                android:text="@string/termsIntro"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="333dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/msg_termsandco3"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/privacy"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_width="287dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
            android:text="@string/ok"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:id="@+id/termsOKbtn"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
    </Button>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
