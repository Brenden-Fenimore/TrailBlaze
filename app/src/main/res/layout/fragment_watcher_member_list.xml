<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >

        <!-- Swish Background-->


    <com.example.trailblaze.view.SwishBackgroundView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/swishBackgroundView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp"/>

    <!-- Back Button-->

    <ImageButton
                android:src="@drawable/chevron_left"
                android:contentDescription="@string/chevronBack"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:id="@+id/backButton"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText,MissingConstraints"/>

    <!--Edit Member Watcher List-->


    <ImageButton
            android:src="@drawable/baseline_settings_24"
            android:contentDescription="@string/settings"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/settingsbtn"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="355dp"
            tools:ignore="MissingConstraints"/>

    <!-- Watcher Member List -->

    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watcherMemberList"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/amethysta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swishBackgroundView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />



    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/watcherMemberRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
