<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            >

        <!-- Swish Background-->
        <com.example.trailblaze.view.SwishBackgroundView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/swishBackgroundView"
                tools:ignore="MissingConstraints"/>

        <!-- Back Button-->
        <ImageButton
                android:src="@drawable/chevron_left"
                android:contentDescription="@string/chevronBack"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:id="@+id/backButton"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText,MissingConstraints"/>


<!-- Watcher Member List -->
    <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watcherMemberList"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/amethysta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/swishBackgroundView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

    <!--Profile Picture-->

    <ImageView
            android:id="@+id/profilePicture"
            android:contentDescription="@string/watcherMemPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/account_circle"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/watcherMemberRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
