<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
                android:id="@+id/fragment_container"
             tools:context=".ui.favorites.FavoritesFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/navLayout">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Custom Swish Background at the bottom layer -->
            <com.example.trailblaze.view.SwishBackgroundView
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            <ImageButton
                    app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
                    android:contentDescription="@string/btn_back"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:id="@+id/chevron_left"
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>

            <ImageButton
                    android:src="@drawable/baseline_settings_24"
                    android:contentDescription="@string/settings"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:id="@+id/settingsbtn"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navLayout"
            android:orientation="vertical"
            android:id="@+id/menuTitle">
        <TextView
                android:id="@+id/Settings"
                android:layout_gravity="center_horizontal"
                android:text="@string/menuTitle"
                android:textSize="40sp"
                android:fontFamily="@font/amethysta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/menuTitle"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_width="286dp"
                android:layout_height="173dp"
                android:id="@+id/profilePicture"
                app:srcCompat="@drawable/account_circle"
                android:contentDescription="@string/username"
                android:paddingTop="30dp"
                android:layout_gravity="center"/>

        <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/title_home"
                        android:id="@+id/navigation_home"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/exploreTrails"
                        android:id="@+id/navigation_map"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/achievementsTitle"
                        android:id="@+id/navigation_trailChallenges"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/safetyTips"
                        android:id="@+id/navigation_safety"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/help_center"
                        android:id="@+id/navigation_help"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <TextView
                        android:text="@string/contact_us"
                        android:id="@+id/navigation_contact"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:fontFamily="@font/amethysta"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
            android:id="@+id/frameStackorConnectw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp">

        <ImageView
                android:id="@+id/imageView8"
                android:layout_width="449dp"
                android:layout_height="324dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/flowers"
                android:contentDescription="@string/description"/>
        <LinearLayout
                android:id="@+id/linearRowFacebookOne"
                android:layout_gravity="top|center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"/>
    </FrameLayout>
    <Button
            android:text="@string/titleLogout"
            android:layout_width="304dp"
            android:fontFamily="@font/amethysta"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/logoutbtn">
    </Button>


</RelativeLayout>