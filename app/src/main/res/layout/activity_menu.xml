<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".ui.favorites.FavoritesFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageButton
                app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
                android:contentDescription="@string/btn_back"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:id="@+id/chevron_left"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>

        <ImageButton
                android:src="@drawable/baseline_settings_24"
                android:contentDescription="@string/settings"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageButton"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="335dp"
                android:layout_height="232dp"
                app:srcCompat="@drawable/account_circle"
                android:contentDescription="@string/username"
                android:paddingTop="68dp"
                android:layout_gravity="center"/>

        <TextView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="28sp">

        </TextView>

        <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/map"
                        android:contentDescription="@string/map_image"/>

                <TextView
                        android:text="@string/map_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/account_circle"
                        android:contentDescription="@string/profile"/>

                <TextView
                        android:text="@string/profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/favorite"
                        android:contentDescription="@string/favorites"/>

                <TextView
                        android:text="@string/favorites"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/question"
                        android:contentDescription="@string/help_center"/>

                <TextView
                        android:text="@string/help_center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/baseline_contact_mail_24"
                        android:contentDescription="@string/contact_us"/>

                <TextView
                        android:text="@string/contact_us"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:paddingBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
            android:text="@string/logout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="115dp"
            android:layout_height="65dp" />

</RelativeLayout>