<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Account Title -->
        <TextView
                android:id="@+id/account_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="16dp" />

        <!-- User Profile Section with Location and Difficulty -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">

            <!-- Location Icon on the Left -->
            <ImageButton
                    android:id="@+id/icon_location"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/location"
                    android:contentDescription="Location Icon"
                    android:layout_marginEnd="16dp" />

            <!-- Profile Image in the Center -->
            <ImageButton
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Profile Picture"
                    android:layout_gravity="center" />

            <!-- Difficulty Icon on the Right -->
            <ImageButton
                    android:id="@+id/icon_activity"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/strength"
                    android:contentDescription="Activity Icon"
                    android:layout_marginStart="16dp"/>

        </LinearLayout>

        <!-- Username and Watcher -->
        <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingTop="8dp" />

        <TextView
                android:id="@+id/watcher_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watcher Member"
                android:textSize="16sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:paddingTop="4dp" />

        <!-- Friends Section -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- Placeholder for friend avatars -->
            <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Friend Profile Placholder" />
            <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Friend Profile Placholder" />
            <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Friend Profile Placholder" />
            <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Friend Profile Placholder" />
            <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/account_circle"
                    android:contentDescription="Friend Profile Placholder" />
            <!-- Repeat as necessary for other friends -->
        </LinearLayout>
        </HorizontalScrollView>

        <!-- Leaderboard Section -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- Placeholder for leaderboard items -->
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Leaderboard Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Leaderboard Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Leaderboard Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Leaderboard Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Leaderboard Placeholder" />
            <!-- Add more leaderboard items here -->
        </LinearLayout>
        </HorizontalScrollView>

        <!-- Photos Section -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- Placeholder for photos -->
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Photo Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Photo Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Photo Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Photo Placeholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Photo Placeholder" />
            <!-- Add more photo placeholders -->
        </LinearLayout>
        </HorizontalScrollView>

        <!-- Favorite Trails Section -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Trails"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- Placeholder for favorite trails -->
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placeholder" />

            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placholder" />
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/question"
                    android:contentDescription="Favorite Trail Placholder" />
            <!-- Add more favorite trail placeholders -->
        </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>