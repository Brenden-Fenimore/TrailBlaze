<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <!-- Swish Background-->
    <com.example.trailblaze.view.SwishBackgroundView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/swishBackgroundView"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
            app:srcCompat="@drawable/chevron_left"
            android:contentDescription="@string/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="9dp"
            android:id="@+id/chevron_left"
            android:tint="#CDEDA3"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints"/>


    <!--Profile Picture-->

    <ImageView
            android:id="@+id/watcherProfilePicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/account_circle"
            android:contentDescription="@string/watcherPhoto"
            app:layout_constraintTop_toBottomOf="@+id/swishBackgroundView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/watcherName"
            android:layout_margin="9dp"/>


    <!--TrailBlaze Username Field-->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watcherName"
            android:background="#FFFFFF"
            android:text="@string/blazer"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/amethysta"
            android:layout_margin="9dp"
            app:layout_constraintTop_toBottomOf="@+id/watcherProfilePicture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/watcherRankDetails"
            android:padding="9dp"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/watcherName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/watcherAwards"
            android:id="@+id/watcherRankDetails"
            android:padding="6dp"
            android:background="#E1E4D5"
            android:layout_margin="9dp">

        <!-- Watcher Rank-->

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/watcherRank"
                android:background="#FFFFFF"
                android:text="@string/watcherRank"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:padding="9dp"
                android:textSize="18sp"
                android:fontFamily="@font/amethysta"
                android:layout_margin="9dp"/>

        <!-- Rank Metrics-->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp"
                android:background="#C5C8BA">

            <!-- Total Trails Watched-->

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:text="Total Trails Watched"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:padding="9dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>

            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalTrailsWatched"
                    android:text="58"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:padding="9dp"
                    android:fontFamily="@font/amethysta"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            <!-- Average Watcher Response Time-->

            <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amethysta"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:text="Average Response Time"
                    android:padding="9dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/averageResponseTime"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:text="180"
                    android:layout_marginTop="10dp"
                    android:padding="9dp"
                    android:fontFamily="@font/amethysta"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/watcherAwards"
            app:layout_constraintTop_toBottomOf="@+id/watcherRankDetails"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#E1E4D5"
            android:layout_margin="6dp">

        <!-- Watcher Award Label-->
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/watcherStatsLabel"
                android:background="#FFFFFF"
                android:text="@string/watcherStats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/amethysta"
                android:layout_margin="6dp"
                android:layout_gravity="center_horizontal"
                android:padding="9dp"/>

        <!-- Badge Scrolling Portion -->
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#C5C8BA"
                android:id="@+id/badgeScroll">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:id="@+id/watcherStats"
                    android:padding="3dp"
                    >

                <!-- Frame Layout for TouchListeners-->

                <!-- 1st Badge Banner-->

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/firstBadgeContainer">

                <!-- Badge Image-->

                <ImageView
                        android:id="@+id/watcherBadges"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:src="@drawable/badge"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/watcherBadge"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"/>

                    <!-- Badge Description-->

                    <TextView
                            android:id="@+id/badgeDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@android:color/black" />
                </FrameLayout>

                <!-- 2nd Badge in Banner -->

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/secondBadgeContainer">
                <ImageView
                        android:id="@+id/watcherBadges1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:src="@drawable/badge"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/watcherBadge"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"/>

                    <!-- Badge Description-->

                    <TextView
                            android:id="@+id/badgeDescription1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@android:color/black" />

                </FrameLayout>

                <!-- 3rd Badge in Banner-->

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/thirdBadgeContainer">

                <ImageView
                        android:id="@+id/watcherBadges2"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:src="@drawable/badge"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/watcherBadge"
                        android:layout_marginTop="5dp"
                        android:padding="6dp"/>

                    <!-- Badge Description-->

                    <TextView
                            android:id="@+id/badgeDescription2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@android:color/black" />
            </FrameLayout>
                <!-- 4th Badge in Banner-->

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/fourthBadgeContainer"
                        android:layout_gravity="center">

                    <ImageView
                            android:id="@+id/watcherBadges3"
                            android:layout_width="95dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="1dp"
                            android:src="@drawable/badge"
                            android:layout_gravity="center"
                            android:contentDescription="@string/watcherBadge"
                            android:layout_marginTop="5dp"
                            android:padding="6dp"/>

                    <!-- Badge Description-->

                    <TextView
                            android:id="@+id/badgeDescription3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@android:color/black" />
                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>
        <!-- Watcher Logo-->
        <ImageView
                android:id="@+id/watcherLogo"
                android:layout_width="75dp"
                android:layout_height="80dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/watcherName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/watcherslogo"
                android:contentDescription="@string/watcherLogo"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>